<style>
    /* Your CSS styles */
    .product-carousel {
      position: relative;
      overflow-x: hidden;
    }

    .product-list {
      display: flex;
      width: fit-content; /* Add this line to make the container width fit the content */
      margin: 0 auto; /* Center the product list horizontally */
      transition: transform 0.5s;
    }

    .product {
      flex-shrink: 0; /* Prevent the product from shrinking */
      margin-right: 10px; /* Add some space between products */
    }

    .product-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      object-position: center;
    }

    .carousel-navigation {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 100%;
      display: flex;
      justify-content: space-between;
      z-index: 1;
    }

    .carousel-prev-btn,
    .carousel-next-btn {
/*      font-size: 100px;*/
      background: none;
      border: black;
      color: green;
      cursor: pointer;
    }

    .carousel-prev-btn {
      margin-left: 10px;
    }

    .carousel-next-btn {
      margin-right: 10px;
    }
</style>
  
<div class="image-container" style="position: relative; margin-bottom: 40px;">
  <%= image_tag("cover.jpg", style: "height: 200px; width: 100%;", class: "img-fluid", alt: "...") %>
  <div class="text-overlay" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center;">
    <h1 style="color: black; font-size: 30px; background-color: rgba(255, 255, 255, 0.7); padding: 10px; border-radius: 10px;">Your Cart Details</h1>
  </div>
</div>
   <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
  <div class="container">
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Package Details</h5>
        <table class="table">
          <thead>
            <tr>
              <th>Product</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @cart.product %></td>
              <td><%= @cart.price %></td>
              <td><%= @cart.quantity %></td>
              <td><%= @cart.subtotal %></td>
            </tr>
          </tbody>
        </table>
        <p><strong>Subtotal:</strong> <%= @cart.total %></p>
        <p><strong>Coupon:</strong> <%= @cart.coupon %></p>
      </div>
    </div>

    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Cart Details</h5>
        <div id="cart-details">
          <%= render partial: 'partials/cart_details', locals: { cart: @cart } %>
        </div>
      </div>
    </div>

